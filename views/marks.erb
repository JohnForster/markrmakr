<link rel="stylesheet" href="stylesheet.css" type="text/css" />
<h2><a href="/marks" class=backlink>MarkrMakr</a></h2>
<center>
  <h1> Yr marks </h1>
  <div>
    <% @marks.each { |mark| %>
      <a href=<%=mark.url%>>
        <%= mark.title %>
      </a>
      <form class=inline action=/marks/<%=mark.id%>/comments>
        <input type=submit id="<%=mark.title%>" value='Comments'>
      </form>
      <form class=inline action=/marks/<%=mark.id%>/edit>
        <input type=submit id="<%=mark.title%>" value='Edit'>
      </form>
      <br>
      <!-- <a href=marks/<%=mark.id%>/edit>Delete</a><br> -->
    <% } %>
  </div>
  <br>
  <form action='/marks/new'>
    <input type=submit value='New mark'>
  </form>
</center>
